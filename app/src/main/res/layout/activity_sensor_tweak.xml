<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dingu.smartcradle.SensorTweakActivity">

    <ToggleButton
        android:id="@+id/toggleButtonWetSensor"
        android:layout_width="186dp"
        android:layout_height="123dp"
        android:layout_marginBottom="109dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="75dp"
        android:text="ToggleButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonBabyCry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginBottom="265dp"
        android:layout_marginEnd="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="167dp"
        android:text="Wet Sensor"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ToggleButton
        android:id="@+id/toggleButtonBabyCry"
        android:layout_width="186dp"
        android:layout_height="123dp"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="81dp"
        android:text="ToggleButton"
        app:layout_constraintBottom_toTopOf="@+id/toggleButtonWetSensor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="167dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="119dp"
        android:text="Baby Cry"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/toggleButtonBabyCry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
